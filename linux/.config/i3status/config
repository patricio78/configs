general {
  colors = true
  color_good = "#a3be8c"
  color_bad  = "#bf616a"
  color_degraded = "#ebcb8b"
  interval = 1
  separator = "|"
}

order += "wireless wlp2s0"
order += "ethernet enp3s0"
order += "cpu_usage"
order += "volume master"
order += "battery 0"
order += "memory"
order += "load"
order += "tztime local"

cpu_usage {
  format = "Cpu: %usage"
}

wireless wlp2s0 {
  format_up = "Wifi: (%quality at %essid) %ip"
  format_down  = "Wifi: down"
}

ethernet enp3s0 {
  format_up = "ETH: %ip (%speed)"
  format_down = "ETH: down"
}

battery 0 {
  format = "Battery: %percentage"
  last_full_capacity = true
  threshold_type=percentage
  low_threshold=10
}

memory {
  memory_used_method = classical
  format="Memory: %used/%total"
}

volume master {
    format = "â™ª: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%a %m-%d-%Y %I:%M %p"
}

load {
    format = "%5min"
}
